- @page_title = "New loan"
= error_messages_for "lending"
- form_for @lending do |form|
  %p
    = form.label :title, "Title"
    = form.text_field :title
  %p
    = form.label :category, "Category"
    = select_tag "lending[category]", options_for_select([["CD", "cd"], ["Book", "book"], ["Other", ""]])
  %p
    = form.label :time, "Time"
    = select_tag "lending[time]", options_for_select([["1 day", "1"], ["3 days", "3"], ["1 week", "7"], ["2 weeks", "14"]])
  %p
    = form.hidden_field :from_id, :value => current_user.id
    = form.label :to, "To"
    = select_tag "lending[to_id]", options_from_collection_for_select(@friends, "id", "login")
  %p
    = form.submit "Save"
  